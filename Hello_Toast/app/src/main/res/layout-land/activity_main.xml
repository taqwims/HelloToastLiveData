<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#CD07FF"
        android:onClick="showToast"
        android:text="@string/button_label_toast" />

    <TextView
        android:id="@+id/show_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="#FFFF00"
        android:gravity="center"
        android:text="@string/count_initial_value"
        android:textSize="160sp"
        android:layout_below="@id/button_toast"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/button_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#CD07FF"
        android:text="@string/button_label_count"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/button_toast"/>

    <Button
        android:id="@+id/button_pindah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch Page"
        android:layout_toRightOf="@id/button_count"
        android:layout_marginLeft="50dp"
        android:backgroundTint="#CD07FF" />


    <Button
        android:id="@+id/button_browser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Browse Page"
        android:layout_toRightOf="@id/button_pindah"
        android:layout_marginLeft="50dp"
        android:backgroundTint="#CD07FF" />
</RelativeLayout>